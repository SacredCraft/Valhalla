{
  "extends": "@valhalla/typescript-config/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],

      "@valhalla/auth": ["../../packages/auth/src"],
      "@valhalla/auth/*": ["../../packages/auth/src/*"],

      "@valhalla/db": ["../../packages/db/src"],
      "@valhalla/db/*": ["../../packages/db/src/*"],

      "@valhalla/env/*": ["../../packages/env/src/*"],

      "@valhalla/api": ["../../packages/api/src"],
      "@valhalla/api/*": ["../../packages/api/src/*"],

      "@valhalla/utils/*": ["../../packages/utils/src/*"],

      "@valhalla/design-system/*": ["../../packages/design-system/src/*"],

      "@valhalla/tailwind-config/*": ["../../packages/tailwind-config/src/*"],

      "@valhalla/*": ["../../packages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "next.config.ts"
  ]
}
