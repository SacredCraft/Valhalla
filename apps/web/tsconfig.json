{
  "extends": "@valhalla/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@/*": ["./*"],
      "@valhalla/core": ["../../packages/core/src"],
      "@valhalla/core/*": ["../../packages/core/src/*"],
      "@valhalla/db": ["../../packages/db/src"],
      "@valhalla/db/*": ["../../packages/db/src/*"],
      "@valhalla/env/*": ["../../packages/env/src/*"],
      "@valhalla/api": ["../../packages/api/src"],
      "@valhalla/api/*": ["../../packages/api/src/*"],
      "@valhalla/utils/*": ["../../packages/utils/src/*"],
      "@valhalla/design-system/*": ["../../packages/design-system/src/*"],
      "@valhalla/tailwind-config/*": ["../../packages/tailwind-config/src/*"],
      "@valhalla/collaboration/*": ["../../packages/collaboration/src/*"],
      "@valhalla/collaboration": ["../../packages/collaboration/src"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "next.config.ts"
  ],
  "references": [
    {
      "path": "../../packages/api"
    },
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/design-system"
    },
    {
      "path": "../../packages/tailwind-config"
    },
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/collaboration"
    }
  ]
}
