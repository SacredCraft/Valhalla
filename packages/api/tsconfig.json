{
  "extends": "@valhalla/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "rootDir": ".",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@/*": ["src/*"],

      "@valhalla/core": ["../core/src"],
      "@valhalla/core/*": ["../core/src/*"],

      "@valhalla/db": ["../db/src"],
      "@valhalla/db/*": ["../db/src/*"],

      "@valhalla/utils": ["../utils/src"],
      "@valhalla/utils/*": ["../utils/src/*"]
    }
  },
  "references": [
    { "path": "../core" },
    { "path": "../db" },
    { "path": "../utils" }
  ]
}
