{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "DATABASE_URL",
    "VERCEL_URL",
    "NODE_ENV",
    "CI",
    "SKIP_ENV_VALIDATION",
    "PORT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!CHANGELOG.md",
        "!eslint.config.js",
        "!eslint.config.mjs",
        "!.env.example",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "passThroughEnv": ["DATABASE_URL", "BETTER_AUTH_SECRET"],
      "inputs": ["drizzle/**"]
    },
    "db:generate": {
      "passThroughEnv": ["DATABASE_URL", "BETTER_AUTH_SECRET"],
      "inputs": ["src/schema/**", "drizzle.config.ts"],
      "outputs": ["drizzle/**"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:check": { "cache": false },
    "db:migrate:drop": { "cache": false },
    "db:pull": { "cache": false },
    "db:push": { "cache": false },
    "db:up": { "cache": false },
    "clean": { "cache": false },
    "sync": { "cache": false },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "!CHANGELOG.md"]
    },
    "configure": { "cache": false }
  }
}
